<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iconClose"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:src="@drawable/ic_baseline_close_24" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginStart="@dimen/margin_large_large"
        android:layout_marginEnd="@dimen/margin_large_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_standard"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintStart_toEndOf="@id/iconClose"
        app:layout_constraintTop_toTopOf="@id/iconClose"
        app:layout_constraintBottom_toBottomOf="@id/iconClose"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <fragment
        android:id="@+id/fragmentContainerStudy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iconClose"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_study"
        />

</androidx.constraintlayout.widget.ConstraintLayout>